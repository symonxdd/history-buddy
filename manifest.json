{
    "name": "History Buddy",
    "version": "1.0.0",
    "description": "Clear your history, in 1 click.",
    "manifest_version": 2,
    "permissions": [
        "browsingData",
        "storage"
    ],
    "options_ui": {
        "page": "src/html/options.html",
        "open_in_tab": false
    },
    "browser_action": {
        "name": ":D"
    },
    "icons": {
        "128": "src/img/default.png"
    },
    "background": {
        "scripts": [
            "src/js/background/background.js"
        ]
    }
}